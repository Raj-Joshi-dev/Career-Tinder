<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="4dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="4dp">

        <ImageView
            android:id="@+id/IVJobOpening"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:padding="2dp" />

        <TextView
            android:id="@+id/TVJobTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_toEndOf="@+id/IVJobOpening"
            android:paddingLeft="8dp"
            android:text="@string/jobTitleText"
            android:textSize="20sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/TVPlaceOfWork"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/TVJobTitle"
            android:layout_toEndOf="@+id/IVJobOpening"
            android:drawableStart="@drawable/baseline_my_location_black_24"
            android:paddingLeft="4dp"
            android:text="@string/placeOfWorkText" />

        <TextView
            android:id="@+id/TVPreferredSkill"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/TVPlaceOfWork"
            android:layout_toEndOf="@id/IVJobOpening"
            android:drawableStart="@drawable/baseline_assignment_ind_black_24"
            android:paddingLeft="4dp"
            android:text="Preferred Skill" />

        <ImageButton
            android:id="@+id/imageButtonEdit"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_alignParentRight="true"
            android:background="#FFFFFF"
            app:srcCompat="@android:drawable/ic_menu_edit" />

        <ImageButton
            android:id="@+id/imageButtonDelete"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_below="@id/imageButtonEdit"
            android:layout_alignParentRight="true"
            android:background="#FFFFFF"
            app:srcCompat="@android:drawable/ic_menu_delete" />

    </RelativeLayout>
</android.support.v7.widget.CardView>